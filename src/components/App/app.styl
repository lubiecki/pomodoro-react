@import url('https://fonts.googleapis.com/css?family=Montserrat:400,900')

c_black =   #0C0F0A
c_pink =    #FF206E
c_yellow =  #FBFF12
c_blue =    #41EAD4
c_white =   #FFFFFF

body
    display flex
    justify-content center
    align-items center
    width 100%
    height 100vh
    margin 0
    padding 0
    background c_black
    color c_white
    font-family 'Montserrat', sans-serif
    .wrapper
        font-size 50px
        font-weight 900
    .settings
        fill c_white
        position absolute
        right 40px
        top 20px
        transform scale(2)







